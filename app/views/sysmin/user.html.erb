<%= javascript_include_tag  'member', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag    'member',  'data-turbolinks-track': 'reload' %>
<script>
    $("#userManager").addClass("active");
</script>


<div style="min-height:100px;max-height: 800px; overflow: auto;">
    <table id="userListTable" class="table table-hover  table-bordered" >
    <thead  style="background: #f5f5f5;">
      <tr id="member_tr_th_style">
        <!--<th>用户ID</th>-->
        <th>用户登录账号</th>
        <th>账号密码</th>
        <th>用户名称</th>
        <th>用户所属部门</th>
        <th>用户角色</th>
        <th>性别</th>
        <th>联系方式</th>
        <th>用户状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% for user in @userList %>
        <tr style="line-height: 40px;font-size: 13px;text-align: center;" id="userLable_<%= user.getUserId %>">
          <!--<td><%= user.getUserId %></td>-->
          <td><%= user.getUserLoginId %></td>
          <td><%= user.getUserPasswd %></td>
          <td><%= user.getUserName %></td>
          <td><%= user.getUserDeptName %></td>
          <td><%= user.getUserRoleName %></td>
          <td><%= case user.getUserSex
                    when "0" then "女"
                    when "1" then "男"
                    else "-"
                  end %></td>
          <td><%= user.getUserPhone %></td>
          <td><%=  case user.getUserStatus
                    when "0" then "正常"
                    when "1" then "关闭"
                    else "异常"
                  end %></td>
          <td style="font-size:12px;" id="userListOperation"><a>修改</a> | <a href="javascript:void(0)" onclick="member.fn.userDel(<%= user.getUserId %>)">删除</a></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</div>
